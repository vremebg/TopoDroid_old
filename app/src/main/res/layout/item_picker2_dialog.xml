<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  >
  <LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <Button android:id="@+id/item_point"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/POINT"
      android:textSize="@dimen/textsizehead"
    />
    <Button android:id="@+id/item_line"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/LINE"
      android:textSize="@dimen/textsizehead"
    />
    <Button android:id="@+id/item_area"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/AREA"
      android:textSize="@dimen/textsizehead"
    />
      <!-- Button android:id="@+id/item_left"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginRight="@dimen/marginh"
        android:layout_marginTop="@dimen/marginv"
        android:background="@drawable/ic_undo"
      / -->
      <!-- Button android:id="@+id/item_right"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginRight="@dimen/marginh"
        android:layout_marginTop="@dimen/marginv"
        android:background="@drawable/ic_redo"
      / -->
  </LinearLayout>

  <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/marginv"
    android:orientation="horizontal"
    android:gravity="right"
    >
    <Button android:id="@+id/size"
        android:layout_width="80dp"
        android:layout_marginRight="@dimen/marginh"
        style="@style/button_default"
        android:text="-/+"
    />
    <SeekBar android:id="@+id/seekbar"
       android:layout_width="fill_parent"
       android:layout_height="20sp" 
       android:max="360"
       android:background="#666666"
       android:progressDrawable="@drawable/progress2"
    />
  </LinearLayout>


